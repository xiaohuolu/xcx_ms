/* pages/message/messageDetail/messageDetail.wxss */
.container{
  height:100vh;
}
text.no-msg{
  display: block;
  text-align: center;
  color:#999;
  line-height: 2;
  font-size:28rpx;
}
.send-section{
  display: flex;
  box-sizing: border-box;
  height:100rpx;
  position: fixed;
  bottom:0;
}
.send-section input{
  width:75vw;
  height:100%;
  background:#fff;
}
.send-section button{
  width:25vw;
  border-radius: 0;
  line-height:100rpx;
}
.send-section .input-placeholder{
   text-indent: 1rem;
}