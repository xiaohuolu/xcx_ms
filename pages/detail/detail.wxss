/* pages/detail/detail.wxss */


.swiper-wrap {
  position: relative;
}

.swiper-wrap .imgCount {
  position: absolute;
  color: #fff;
  z-index: 99;
  right: 30rpx;
  bottom: 40rpx;
}

.swiper-wrap .roomPrice {
  font-size: 40rpx;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.7);
  padding: 20rpx 50rpx;
}

.detail-content-section {
  color: #111;
  background: #fff;
  padding: 0 30rpx 150rpx;
}

.detail-content-section .roomName {
  font-size: 36rpx;
  padding: 30rpx 0;
}

.detail-content-section .whole-lease-section {
  margin: 40rpx 0;
}

.detail-content-section .title {
  font-weight: bold;
}
.room-description-section {
  font-size: 28rpx;
  border-bottom: 1px solid rgb(250,250,250);
   margin:50rpx 0;
}

.room-description-section .room-description {
  line-height: 1.5;
  margin: 20rpx 0;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.whole-lease-section .whole-lease .toFacilities{
   line-height:120rpx;
}

.room-details-section{
  margin-top:40rpx;
}

.room-details-section .room-details .details-item{
   display: flex;
   align-items: center;
   justify-content: space-between;
   padding:30rpx 0;
}
.room-details-section .room-details .details-item text:nth-child(1){
    display: block;
    flex:1;
}
.room-details-section .room-details .details-item text:nth-child(2){
    display: block;
    flex:4;
    text-align: right;
}
