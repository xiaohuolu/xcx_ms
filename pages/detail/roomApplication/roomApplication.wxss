/* pages/detail/roomApplication/roomApplication.wxss */

.container{
  box-sizing: border-box;
  min-height:100vh;
  color:#333;
  background:#fff;
}
 
.container view.title{
  margin:40rpx 20rpx 30rpx;
  font-weight: bold;
}
.list-section {
  padding:10rpx 10rpx;
}
.list-section .list-item .item-img{
  width:32%;
}
.list-section .list-item .item-describe{
  width:64%;
}
.list-section .list-item .item-describe .describe{
  width:100%;
}
/*入住信息start*/
.user-section>view{
  line-height: 3;
}
.user-section .rooms-quantity{
   display: flex;
 }
 .user-section .user-text{
   width:30%;
   text-indent:30rpx;
 }
.rooms-quantity .quantity-btn{
  width:70%;
    display: flex;
    align-items: center;
  }
.rooms-quantity .quantity-btn button{
   padding:0;
   margin:0 40rpx;
   width:40rpx;
   height:40rpx;
   line-height: 1;
   color:#999;
    border-radius: 0;
}

.user-section .user-name{
  display: flex;
  align-items: center;
}
.user-section input{
  width:70%;
}

.user-section .phone{
  display: flex;
  align-items: center;
}

.user-section .idCard{
  display: flex;
  align-items: center;
}
.user-note{
  width:100%;
  height:150rpx;
  padding:20rpx;
  box-sizing: border-box;
}
 /*入住信息end*/
.container .date{
  width:100%;
}
view.content .price{
  box-sizing: border-box;
  background:#fff;
  display: flex;
  justify-content: space-between;
  /* padding:30rpx; */
}
button.commit{
  width:100vw;
  /* position: fixed;
  bottom:0; */
  margin-top:30rpx;
  border-radius: 0;
}
