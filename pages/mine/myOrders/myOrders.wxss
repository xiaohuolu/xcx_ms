/* pages/mine/myOrders/myOrders.wxss */
.orders-list-section{
  background:#fff;
}
.orders-list-section .orders-list{
  padding:30rpx 20rpx;
}
.orders-list-section .orders-list .list-title{
   font-size:34rpx;
   line-height: 2.5;
}
.orders-list-section .orders-list .list-content{
  display: flex;
  padding:30rpx 0;
  height:150rpx;
}
.orders-list-section .orders-list .content-text{
  width:70vw;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.orders-list-section .orders-list .content-img{
  width:30vw;
}
.orders-list-section .orders-list .content-img image{
  width:100%;
  height:100%;
}
.orders-list .list-cancel{
  padding:20rpx 0;
  font-size:28rpx;
}
.status-section{
  display: flex;
  justify-content: space-between;
  background:rgba(0, 0, 0, 0.027);
}