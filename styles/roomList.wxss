/*房间列表  */
.list-section {
  background:#fff;
}
.list-section .list-item{
  display: flex;
  height:200rpx;
  box-sizing: border-box;
  padding:20rpx 20rpx;
  justify-content: space-between;
}
.list-section .list-item .item-img{
  width:28%;
}
.list-section .list-item .item-img image{
  width:100%;
  height:100%;  
}
.list-section .list-item .item-describe{
width:68%;
display: flex;
align-items: center;
}
.list-section .list-item .item-describe .visibility{
  visibility:hidden;
}
.list-section .list-item .item-describe .describe{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height:100%;
  width:70%;
}
.list-section .list-item .item-describe .describe .title{
   font-size:32rpx;
}
.list-section .list-item .item-describe .price{
  width:30%;
  font-weight: bold;
  text-align: right;
}