 .room-evaluation-section{
   margin:30rpx 0;
 }

 .room-evaluation-section .room-evaluation-title .title{
   margin-right:30rpx;
 }
.room-evaluation-section .room-evaluation-title icon{
   color:rgb(255,196,0);
}
.room-evaluation-section .room-evaluation-title .icon-length{
  color:#555;
  margin-left:20rpx;
}
.room-evaluation-content {
  margin:30rpx 0;  
}
.room-evaluation-content .evaluation-person{
  display: flex;
  height:100rpx;
}
 
.evaluation-person .person-img{
  width:100rpx;
  margin-right:30rpx;
}

.evaluation-person .person-img image{
  width:100%;
  height:100%;
  border-radius: 50%;
}

.evaluation-person .person-msg{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.evaluation-person .person-msg-time{
  font-size:28rpx;
  color:#999;
}
.room-evaluation-content .room-evaluation-word{
  margin-top:30rpx;
}
